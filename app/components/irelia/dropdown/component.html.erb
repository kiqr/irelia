<%= content_tag :span, html_options.merge({"data-controller": "irelia-dropdown"}) do %>
  <span class="irelia-dropdown__trigger">
    <%= trigger %>
  </span>
  <div
    class="irelia-dropdown__content"
    x-show="dropdownOpen"
    @click.away="dropdownOpen = false"
    x-transition:enter="ease-out duration-200"
    x-transition:enter-start="-translate-y-2"
    x-transition:enter-end="translate-y-0"
    x-cloak>
    <div class="irelia-dropdown__items">
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    </div>
  </div>
<% end %>
