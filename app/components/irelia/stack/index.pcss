@layer components {
  .irelia-stack {
    @apply flex gap-4;
  }

  .irelia-stack--grow > * {
    @apply grow;
  }

  .irelia-stack--horizontal {
    @apply flex-row;
  }

  .irelia-stack--horizontal-reverse {
    @apply flex-row-reverse;
  }

  .irelia-stack--vertical {
    @apply flex-col;
  }

  .irelia-stack--vertical-reverse {
    @apply flex-col-reverse;
  }
}
