<%= content_tag :div, html_options do %>
  <%= sidebar if sidebar %>
  <main class="irelia-app-shell--main">
    <% if breadcrumbs %>
      <div class="irelia-app-shell--breadcrumbs-container">
        <%= breadcrumbs %>
      </div>
    <% end %>

    <% if submenu %>
      <div class="irelia-app-shell--submenu-container">
        <%= submenu %>
      </div>
    <% end %>

    <%= content %>
  </main>
<% end %>
