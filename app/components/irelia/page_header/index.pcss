@layer components {
  .irelia-page-header {
    @apply flex space-y-1 mb-10 items-center;

    .irelia-page-header__inner {
      @apply flex-1;

      h1 {
        @apply text-2xl font-bold text-irelia-primary;
      }

      p {
        @apply text-neutral-400;
      }
    }

    .irelia-page-header__action-buttons {
    }
  }
}
