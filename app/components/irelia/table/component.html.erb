<%= render(Irelia::Card::Component.new(padding: false)) do %>
  <%= content_tag :table, html_options do %>
    <% if columns.size > 0 %>
      <thead>
        <tr>
          <% columns.each do |column| %>
            <%= column %>
          <% end %>
        </tr>
      </thead>
    <% end %>

    <% if rows.size > 0 %>
      <tbody>
        <% rows.each do |row| %>
          <%= row %>
        <% end %>
      </tbody>
    <% end %>

    <%= content %>
  <% end %>
<% end %>
